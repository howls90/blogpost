<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.1.0/css/font-awesome.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">
    <script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>
  </head>

  <body>

    <%= render 'layouts/nav', user: @user %>
    
    <% if flash[:notice] %>
      <div class="alert-right">
        <div class="alert alert-block alert-info alert-dismissable">
            <button type="button" id="close-alert" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
              <%= notice %>
        </div>
      </div>
    <% end %>

    <p class="alert alert" style="position: absolute" ><%= alert %></p>

    <div style="margin-top: 55px"></div>
    
    <%= yield %>

    <%= render 'layouts/footer', user: @user %>

    <script type="text/javascript">
      $(document).ready(function() {
        setTimeout(function() {
          $("#close-alert").trigger('click');
        }, 5000);
      });
    </script>
      
  </body>
</html>
