<%= render 'banner' %>

<div class="container">
	<h1><%= t('.last_articles') %></h1>
	<br>
	<div class="row">
	  <div class="row"> 
	    <% @posts.each do |post| %>
	      <% cache post do %>
	        <%= render 'post', post: post  %>
	      <%end%>
	    <%end%> 
	  </div>
	</div>

	<br>

	<%= link_to 'New Post', new_post_path, class: "btn btn-primary" %>
</div>