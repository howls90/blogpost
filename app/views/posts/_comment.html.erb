<div class="col col-lg-2" style="text-align: center">
  <%= image_tag(comment.user.avatar.avatar.url, class: "circle img-thumbnail img-box")%>
</div> 
<div class="col-xs-12 col-sm-9 col-md-9">
  <div class="row-content">
     <div class="btn-group-vertical">
      <small> 
        <%= comment.updated_at.strftime('%Y/%m/%d') %> by  
        <i class="fa fa-pencil" aria-hidden="true"></i> <%= comment.user.name %>
      </small>
      <p><%= comment.body %></p>
    </div>
  </div>
  <hr>
  <br>
</div>